{
    "database": {
        "type": "sqlite",
        "sqlite": {
            "path": "src/database/kiosk.db"
        },
        "postgresql": {
            "host": "localhost",
            "port": 5432,
            "database": "kiosk",
            "username": "kiosk_user",
            "password": "your_password"
        }
    },
    "email": {
        "smtp_server": "<server>",
        "smtp_port": 587,
        "login": "<login>",
        "password": "<password>"
    },
    "mattermost": {
        "enabled": true,
        "base_url": "YOUR_MATTERMOST_BASE_URL",
        "bot_token": "YOUR_MATTERMOST_BOT_TOKEN"
    },
    "gpio": {
        "chip": "/dev/gpiochip0",
        "line_number": 4
    },
    "appearance": {
        "mode": "Dark"
    },
    "admin": {
        "password": "super-secure-password"
    },
    "sound": {
        "enabled": true,
        "positive_directory": "src/sounds/positive/",
        "negative_directory": "src/sounds/negative/"
    },
    "logging": {
        "level": "INFO"
    }
}